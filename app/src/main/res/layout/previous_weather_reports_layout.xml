<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_margin"
    android:layout_marginHorizontal="@dimen/medium_margin"
    style="@style/DetailsContainer">

    <TextView
        android:id="@+id/tvLocationName"
        style="@style/MediumLightTextView"
        tools:text="Location"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tvDateTime"
        style="@style/MediumLightTextView"
        tools:text="Sat 16 Jan 2021 11:84 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName"/>


    <ImageView
        android:id="@+id/ImgWeather"
        android:src="@drawable/ic_cloud_light"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/xsmall_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/tvDateTime"/>

    <TextView
        android:id="@+id/tvDescription"
        style="@style/MediumLightTextView"
        tools:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xsmall_margin"
        app:layout_constraintLeft_toRightOf="@+id/ImgWeather"
        app:layout_constraintTop_toTopOf="@+id/ImgWeather"/>

    <ImageView
        android:id="@+id/ImgPrecip"
        android:src="@drawable/ic_pricip_light"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/xsmall_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/ImgWeather"/>

    <TextView
        android:id="@+id/tvPrecip"
        style="@style/MediumLightTextView"
        tools:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xsmall_margin"
        app:layout_constraintLeft_toRightOf="@+id/ImgPrecip"
        app:layout_constraintTop_toTopOf="@+id/ImgPrecip"/>

</androidx.constraintlayout.widget.ConstraintLayout>