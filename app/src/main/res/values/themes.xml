<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyWeather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightBackground</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
    </style>
    <style name="BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>
    <style name="xlargeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/xlarge_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="XLargeLightTextView" parent="xlargeTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="largeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LargeLightTextView" parent="largeTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="MediumTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MediumLightTextView" parent="MediumTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="smallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SmallLightTextView" parent="smallTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="xsmallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/xsmall_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="XSmallLightTextView" parent="xsmallTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="DetailsContainer" >
        <item name="android:background">@drawable/details_background</item>
        <item name="android:paddingTop">@dimen/large_margin</item>
        <item name="android:paddingBottom">@dimen/large_margin</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
        <item name="android:paddingRight">@dimen/small_margin</item>
    </style>
</resources>